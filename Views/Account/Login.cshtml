@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background-color: #343a40;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            border-radius: 12px;
            background: #f8f9fa;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }

            .login-card h2 {
                color: #007bff;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

        .form-label {
            font-weight: bold;
            color: #495057;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .text-center a {
            color: #007bff;
        }

            .text-center a:hover {
                text-decoration: underline;
            }

        .small {
            font-size: 0.875em;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h2 class="text-center mb-4">Welcome Back!</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <p>Don't have an account? <a href="@Url.Action("Create", "Person")">Sign Up</a></p>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
